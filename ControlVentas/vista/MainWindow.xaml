                            <DataGridTextColumn Binding="{Binding Precio}" Header="Precio" Width="*" IsReadOnly="True"  />
                            <DataGridTextColumn Binding="{Binding SubTotal}" Header="Sub total" Width="*" IsReadOnly="True"  />
                            <DataGridTemplateColumn>   
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Eliminar" Padding="0,0,20,0"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="eliminarFilaGridCarroDeCompras" Foreground="#62666A" Content="&#xf014;" FontFamily="{StaticResource FontAwesome}" BorderBrush="Transparent" Background="Transparent">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Border Background="{TemplateBinding Background}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        <!--Fin columnas-->

                    </DataGrid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="75"/>
                        </Grid.RowDefinitions>

                        <Label Cursor="Arrow" HorizontalContentAlignment="Center" FontSize="300"  Foreground="#E0E0E0" Name="labelImagenBarCode" FontFamily="{StaticResource FontAwesome}" Content="&#xf02a;" Margin="190,87,188,0" Grid.Row="0" VerticalAlignment="Top" Height="242"/>
                        <Label Cursor="Arrow" Content="Escanea productos..." Name="labelTextoBarCode" HorizontalContentAlignment="Center" Foreground="#E0E0E0" Margin="190,329,188,0" VerticalAlignment="Top" Grid.Row="0"/>


                        <Label Cursor="Arrow" Foreground="#62666A" FontSize="30" Content="Total: $" HorizontalAlignment="Left" Margin="40,0,0,0" Grid.Row="1" VerticalContentAlignment="Center" Padding="5,5,0,5" Width="102"/>
                        <Label Cursor="Arrow" Foreground="#62666A" Name="labelTotalCarritoDeCompras" HorizontalAlignment="Left" FontSize="30" Content="0" HorizontalContentAlignment="Center" Margin="147,0,0,0" Grid.Row="1" VerticalContentAlignment="Center" Padding="0,5,5,5"/>
                        <Button Name="botonGuardarVenta" FontWeight="ExtraLight" FontSize="20" ToolTip="Guardar venta" Foreground="White"  FontFamily="{StaticResource FontAwesome}" Content="Guardar" Background="#71B2D2" BorderBrush="#E0E0E0" Cursor="Hand"  HorizontalAlignment="Right" Margin="0,21,40,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Height="40" RenderTransformOrigin="0.533,1.698" Padding="1,2" Click="botonGuardarVenta_Click" />
                        


                    </Grid>

                       

                </Grid>
             
               
            </TabItem>
            <TabItem Name="menuVentas" FontFamily="{StaticResource FontAwesome}" Header="&#xf00a; Ventas" Style="{StaticResource Items}" GotFocus="menuVentas_GotFocus">
                <Grid >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Inserto un grid en la primera fila del grid externo y le agrego dos columnas-->
                    <Grid Grid.Row="0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="ventas" FontSize="35" Padding="50,50,0,0" Cursor="Arrow"/>
                        
                    </Grid>


                    <!--RowHeaderWith="0" es para remover los botones de selección ubicados al borde de la tabla-->
                    <DataGrid Grid.Row="1" IsReadOnly="True" RowHeaderWidth="0" GridLinesVisibility="None" AutoGenerateColumns="False" x:Name="gridVenta" Foreground="#62666A" Margin="40,0,40,75" BorderBrush="Transparent" Background="White">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="White" />
                                <Setter Property="BorderThickness" Value="0,0,2,5"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="Padding" Value="10,5,0,5"/>
                                <Setter Property="Margin" Value="0,0,0,15"/>
                            </Style>
                        </DataGrid.Resources>

                        <!--Agregar padding en las celdas-->
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="FontWeight" Value="Normal"/>
                                <Setter Property="Padding" Value="10,10,0,10"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DataGridCell}">
                                            <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
