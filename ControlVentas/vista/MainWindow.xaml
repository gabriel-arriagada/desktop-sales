                            <RowDefinition Height="75"/>
                        </Grid.RowDefinitions>

                        <StackPanel Margin="40,0,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Name="textBoxBuscarVenta" HorizontalAlignment="Left" Margin="5,0,0,0" Style="{DynamicResource SearchTextBoxStyle}" 
                 Width="200"  TextWrapping="Wrap" Height="25" VerticalAlignment="Top"/>
                                <Button  Name="botonBuscarVenta" Background="#3AA0CC" FontSize="17" Foreground="White" Margin="5,0,0,0" Width="74" Height="25" Content="Buscar" VerticalAlignment="Center" Click="botonBuscarVenta_Click" />
                            </StackPanel>

                        </StackPanel>

                        <ComboBox IsEditable="True" IsReadOnly="True"  Text="Mostrar más"  HorizontalAlignment="Right" VerticalAlignment="Center" Name="comboBoxVerMasVentas" FontWeight="ExtraLight" FontSize="17" ToolTip="Cargar más ventas" Foreground="Black"  Width="146" Height="25" FontFamily="{StaticResource FontAwesome}" Cursor="Hand" Margin="0,25,40,25" Grid.Row="1" RenderTransformOrigin="0.533,1.698">
